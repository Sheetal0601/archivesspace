<% define_template "agent_topic", jsonmodel_definition(:agent_topic) do |form| %>
  <div class="subrecord-form-fields">
    <div class="agent-record-control-container">
			<%= render_aspace_partial :partial => "shared/subrecord_form", :locals => {:form => form, :name => "subjects", :template_erb => "subjects/template", :template => "subrecord_subject_agent_topic", :heading_text => "Topic Subject", :heading_size => "h4"} %>

			<%= render_aspace_partial :partial => "shared/subrecord_form", :locals => {:form => form, :name => "places", :template_erb => "subjects/template", :template => "subrecord_subject_agent_topic_place", :heading_text => "Place Subject", :heading_size => "h4"} %>
			
	    <%= render_aspace_partial :partial => "notes/form", :locals => {:form => form, :all_note_types => note_types_for("agent_topic"), :section_id => "agent_topic_notes", :nested_note_jsonmodel => "agent_topic", :header_size => "h4", :show_apply_note_order_action => false} %>

      <%= render_aspace_partial :partial => "shared/subrecord_form", :locals => {:form => form, :name => "dates", :template_erb => "dates/template", :template => "structured_date_label", :heading_text => I18n.t("name._frontend.section.dates"), :heading_size => "h4"} %>
    </div>
  </div>
<% end %>

<% define_template "agent_topic_required", jsonmodel_definition(:agent_topic) do |form| %>
    <%= form.label_and_disabled_checkbox "Topic" %>
    <%= form.label_and_disabled_checkbox "Place" %>
    <%= form.label_and_disabled_checkbox "Notes" %>
    <%= form.label_and_disabled_checkbox "Dates" %>
<% end %>

