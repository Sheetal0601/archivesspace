<% if date['date_type_enum'] == "single" && date["structured_date_single"] %>

  <% if date["structured_date_single"]["date_standardized"] %>
    <%= date["structured_date_single"]["date_standardized"] %>

    <% if date["structured_date_single"]["date_standardized_type_enum"] %>
      <%= "(" + date["structured_date_single"]["date_standardized_type_enum"] + ")" %>
    <% end %>
  <% elsif date["structured_date_single"]["date_expression"] %>
    <%= date["structured_date_single"]["date_expression"] %>
    &nbsp; &nbsp;
  <% end %>

 

<% elsif date['date_type_enum'] == "range" && date["structured_date_range"] %>
  <% if date["structured_date_range"]["begin_date_standardized"] %>
    <%= date["structured_date_range"]["begin_date_standardized"] %>

    <% if date["structured_date_range"]["begin_date_standardized_type_enum"] %>
      <%= "(" + date["structured_date_range"]["begin_date_standardized_type_enum"] + ")" %>
    <% end %>

  <% elsif date["structured_date_range"]["begin_date_expression"] %>
    <%= date["structured_date_range"]["begin_date_expression"] %>
  <% end %>

  <% if date["structured_date_range"]["end_date_standardized"] %>
    -
    <%= date["structured_date_range"]["end_date_standardized"] %>

    <% if date["structured_date_range"]["end_date_standardized_type_enum"] %>
      <%= "(" + date["structured_date_range"]["end_date_standardized_type_enum"] + ")" %>
    <% end %>

  <% elsif date["structured_date_range"]["end_date_expression"] %>
    <%= date["structured_date_range"]["end_date_expression"] %>
  <% end %>

<% end %>
